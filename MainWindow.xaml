<Window x:Class="WPF_Shovkun_PR1_ISrPO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Shovkun_PR1_ISrPO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="Red" Content="Красный" Width="100" Height="30" Margin="5" Click="Red_Click"/>
            <Button x:Name="Green" Content="Зелёный" Width="100" Height="30" Margin="5"  Click="Green_Click"/>
            <Button x:Name="Blue" Content="Синий" Width="100" Height="30" Margin="5"  Click="Blue_Click"/>
            <Button x:Name="Yellow" Content="Жёлтый" Width="100" Height="30" Margin="5"  Click="Yellow_Click"/>
        </StackPanel> 
    </Grid>
</Window>
